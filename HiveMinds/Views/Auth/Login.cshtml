@model HiveMinds.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card p-4">
                <div class="text-center mb-4">
                    <img src="https://i.kym-cdn.com/photos/images/original/000/963/891/4ff.png" alt="HiveMinds Logo" class="logo-img"/>
                </div>
                <h3 class="mb-4 text-center">Login</h3>
                <form name="form" role="form" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text">@@</span>
                            <input type="text" pattern="[a-zA-Z0-9_]{0,15}" asp-for="Username" id="username" class="form-control" placeholder="Username" required/>
                        </div>
                        <small id="usernameHelp" class="form-text text-muted">Enter your registered username or Party-issued ID number.</small>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" pattern=".{8,}" asp-for="Password" id="password" class="form-control" placeholder="Password" required/>
                        <small id="passwordHelp" class="form-text text-muted">Provide your secure Party password to access your account.</small>
                    </div>
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe"/>
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit to the Party</button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <a asp-controller="" asp-action="">I Forgot My Password.</a>
                    <div>Don't have an account? <a asp-controller="Auth" asp-action="Signup">Join the HiveMinds - Serve the Party!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
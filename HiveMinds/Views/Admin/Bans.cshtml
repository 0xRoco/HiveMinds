@model HiveMinds.ViewModels.Pages.Admin.AdminUsersViewModel
@{
    ViewData["Title"] = "User Bans and Suspension Management";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout path
}

<div class="container-fluid">
    <h1 class="mt-4">User Bans and Suspension Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">User Bans and Suspension Management</li>
    </ol>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-ban mr-1"></i>
                    Active Bans and Suspensions
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Banned By</th>
                                    <th>Reason</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Username</td>
                                    <td>$BannedBy</td>
                                    <td>$BanReason</td>
                                    <td>$BanStartDate</td>
                                    <td>$BanEndDate</td>
                                    <td>$BanStatus</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm">Edit</button>
                                        <button class="btn btn-danger btn-sm">Remove</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

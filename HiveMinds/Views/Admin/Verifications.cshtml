@model HiveMinds.ViewModels.Pages.Admin.AdminVerificationsViewModel
@{
    ViewData["Title"] = "Verification Requests";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout path
}

<div class="container-fluid">
    <h1 class="mt-4">Verification Requests</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Verification Requests</li>
    </ol>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-check mr-1"></i>
                    Pending Verification Requests
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>User Id</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th>Request Timestamp</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var request in Model.Requests)
                            {
                                <tr>
                                    <td>@request.Id</td>
                                    <td>@request.UserId</td>
                                    <td>@request.Reason</td>
                                    <td>@request.Status</td>
                                    <td>@request.Date</td>
                                    <td>
                                        @if (request.Status == 0)
                                        {
                                            <form method="post">
                                                <button class="btn btn-success btn-sm" asp-action="Verify" asp-route-id="@request.Id" asp-route-status="1">Approve</button>
                                                <button class="btn btn-danger btn-sm" asp-action="Verify" asp-route-id="@request.Id" asp-route-status="2">Reject</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm" disabled>Already @request.Status</button>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
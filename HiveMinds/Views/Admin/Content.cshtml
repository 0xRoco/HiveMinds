@model HiveMinds.ViewModels.Pages.Admin.AdminContentViewModel
@{
    ViewData["Title"] = "Content Moderation";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout path
}

<div class="container-fluid">
    <h1 class="mt-4">Content Moderation</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Content Moderation</li>
    </ol>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    
                </div>
                <div class="card-body">
                    <form method="post">
                        <button class="btn btn-danger btn-sm mb-4">Purge All Thoughts</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-flag mr-1"></i>
                    Flagged Content
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable">
                            <thead>
                            <tr>
                                <th>Thought Id</th>
                                <th>Content</th>
                                <th>User</th>
                                <th>Flagged By</th>
                                <th>Timestamp</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var thought in Model.Thoughts)
                            {
                                <tr>
                                    <td>@thought.Id</td>
                                    <td>@thought.Content</td>
                                    <td>@thought.UserId</td>
                                    <td>$FlaggedBy</td>
                                    <td>$FlagDate</td>
                                    <td>
                                        <button class="btn btn-warning btn-sm">Review</button>
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
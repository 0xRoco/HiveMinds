@model HiveMinds.ViewModels.Pages.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout path
}

<div class="container-fluid">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Users Management</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/users">View Details</a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right">@Model.TotalUsers Total User(s)</i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Bans Management</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/bans">View Details</a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right">@Model.TotalBannedUsers Banned User(s)</i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Content Moderation</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/content">View Details</a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right">@Model.TotalThoughts Flagged Thought(s)</i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">Verification Requests</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/Verifications">View Details</a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right">@Model.VerificationRequests Request(s)</i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Settings</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/settings">View Details</a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-auto col-md-6">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">Quick Actions</div>
                <div class="card-footer align-items-center justify-content-between">
                    <form method="post">
                        <button type="submit" asp-action="PurgeUsers" class="btn btn-danger btn-sm">Purge All Users</button>
                        <button type="submit" asp-action="PurgeThoughts" class="btn btn-danger btn-sm">Purge All Thoughts</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>